
{% extends "layout.twig" %}

{% block content %}

  <div class="widgetheader clearfix">
      <div class="wrapper">
          <div class="left-header">
              {{widget('profile', 'headercolumn1profilePhone', { 'profileType':'phone', 'phone':'profile'})|raw}} 
          </div>
          <div class="right-header">
              {{widget('content', 'textwidgetbox1', {content: '<p>"Lorem ipsum dolor sit amet, consectetur adipisicing elit."</p>', lines: 'all'})|raw}}
          </div>
      </div>
  </div>

<header class="bk-header clearfix">
    <div class="wrapper">
        <div class="logo">
            {{widget('logo', 'logo', {"defaultlogo": asset('images/logo.png')})|raw}}
            {{widget('companyname', 'companyname', {"business": "DESKTOP"})|raw}}
        </div>
    </div>
</header> 

<div class="navbar wrapper clearfix">
        {{widget('extendednavigation', 'navigationheader', {"align":"center"})|raw}}
</div>

<section class="feature-slideshow">
    {{widget('responsiveslideshow', 'responsiveslideshow',
        {'duration':'5',
            'transSpeed': '1500',
            'transType': 'fade',
            'showButtons': true,
            'showBullets': false,
            'allowPause': false,
            'allowLoop': true,
            'showDescription': true,
            'showTitle': true,
            'crop': true,
            'images': [
                {'url':asset('/images/slideshow/slideshow-img1.jpg'),'title':'test title','description': 'test desc'},
                {'url':asset('/images/slideshow/slideshow-img2.jpg'),'title':'test title','description': 'test desc'},
                {'url':asset('/images/slideshow/slideshow-img3.jpg'),'title':'test title','description': 'test desc'}
            ]
        })|raw
    }}
</section>



<div class="page-wrap">
	<div class="wrapper">
		<div class="mainzone headerwrapper">
			{{zone('main')|raw}}
		</div>
	</div>
</div>

<footer class="bk-footer">
        <div class="wrapper clearfix">
            <div class="responsivecolumns columns-two-50-50">
                <div class="column columns-two-left">
                  <div class="left-footer">
                    {{widget('content', 'textwidgetbox2', {content: '<h4>Lorem ipsum</h4>', lines: 'all'})|raw}}
                    {{widget('content', 'textwidgetbox3', {content: '<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmodtempor incididunt ut</p>', lines: 'all'})|raw}}
                    </div>
                </div>
                <div class="column columns-two-right">
                <div class="right-footer">
                    {{widget('profile', 'footercolumn1profilesocialicons', { 'profileType':'socialicons',   'socialicons':'profile'})|raw}}
                    <div class="footer-profile">
                        {{widget('profile', 'footercolumn1profilecopyright', { 'profileType':'copyright',   'copyright':'profile'})|raw}}
                    </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>

{% endblock %}